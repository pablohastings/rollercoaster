package  {		import flash.events.Event;		public class Enemy extends BoundaryObject {				private var enemyAboutToDie:Boolean;		 private var xMovement:Number ;		 private var speedVar:int; 		public var enemyIsAttacking:Boolean;		public function Enemy( passInSpeed:int ) {						trace ("i am a Enemy" );						enemyAboutToDie = false;			enemyIsAttacking = false;						speedVar = passInSpeed;			xMovement = speedVar;						// constructor code			addEventListener(Event.ENTER_FRAME, enterFrameHandler );					}				private function enterFrameHandler (event:Event ) :void {									this.x -= xMovement;				}				public function makeEnemyDie() {						this.gotoAndStop( "dead" )			enemyAboutToDie = true;			xMovement = 0;					}		public function makeEnemyAttack() {						this.gotoAndStop( "attack" )			enemyIsAttacking = true;			xMovement = 0;					}		public function makeEnemyStopAttacking() {						this.gotoAndStop( "stop" )			enemyIsAttacking = false;			xMovement = speedVar;					}				override public function positionOnLand() {						if (enemyAboutToDie == true) {							this.gotoAndStop("dead");						} else if (enemyIsAttacking == true ) {								this.gotoAndStop("attack");			} else {								this.gotoAndStop("run");			}					}	}	}